extends ../../_component/layout/template

block config
  -
    const myTitle = 'Learn to code CSS Colors for beginners';
    const myDescription = 'Colors in CSS are easy to use.';
    const landingPage = 'CSS';
    const activeLink = 'css/colors';

block content
  h1=myTitle
  p=myDescription
  h2 Examples

  h3 CSS Colors
  p Colors set by using color names:
  table(width='100%')
    tr
      td(bgcolor='red', width='50%')
      td(style='padding: 5px') red
    tr
      td(bgcolor='green', width='50%')
      td(style='padding: 5px') green
    tr
      td(bgcolor='blue', width='50%')
      td(style='padding: 5px') blue
    tr
      td(bgcolor='orange', width='50%')
      td(style='padding: 5px') orange
    tr
      td(bgcolor='yellow', width='50%')
      td(style='padding: 5px') yellow
    tr
      td(bgcolor='cyan', width='50%')
      td(style='padding: 5px') cyan
    tr
      td(bgcolor='black', width='50%')
      td(style='padding: 5px') black

  h3 RGB (Red, Green, Blue)
  p Colors set by using this formula rgb(red, green, blue):
  table(width='100%')
    tr
      td(style='background-color: rgb(255, 0, 0)', width='50%')
      td(style='padding: 5px') rgb(255, 0, 0)
    tr
      td(style='background-color: rgb(0, 255, 0)', width='50%')
      td(style='padding: 5px') rgb(0, 255, 0)
    tr
      td(style='background-color: rgb(0, 0, 255)', width='50%')
      td(style='padding: 5px') rgb(0, 0, 255)